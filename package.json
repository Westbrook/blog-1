{
  "name": "dgp1130-blog",
  "version": "0.0.0",
  "description": "Personal blog for https://github.com/dgp1130.",
  "main": "index.js",
  "scripts": {
    "start": "npm run -s clean && npm run -s build:11ty && eleventy --serve",

    "build": "npm run -s clean && npm run -s build:11ty && eleventy",
    "build:11ty": "tsc -p tsconfig.11ty.json",
    "build:11ty-test": "tsc -p tsconfig.11ty-test.json",

    "test": "npm run -s clean && npm run -s test:11ty && npm run -s test:browser",
    "test:11ty": "npm run -s build:11ty-test && jasmine --config=jasmine.config.json",
    "test:browser": "karma start --single-run",
    "test:browser:dev": "karma start",

    "clean": "rm -rf _site/ && find src/ \\( -name '*.js' -o -name '*.js.map' \\) -delete",

    "netlify": "netlify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgp1130/blog.git"
  },
  "keywords": [
    "blog",
    "11ty"
  ],
  "author": "Doug Parker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dgp1130/blog/issues"
  },
  "homepage": "https://github.com/dgp1130/blog#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@types/jasmine": "^3.5.11",
    "@types/node": "^14.0.26",
    "@types/nodegit": "^0.26.7",
    "jasmine": "^3.5.0",
    "karma": "^5.2.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "karma-typescript": "^5.1.0",
    "netlify-cli": "^2.58.0",
    "nodegit": "^0.26.5",
    "typescript": "^3.9.7"
  }
}
