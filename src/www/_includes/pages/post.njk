{% import "fragments/footer.njk" as footer %}
{% import "fragments/header.njk" as header %}
{% import "fragments/author.njk" as author %}

{% set styleLinks %}
    styles/base.css
    styles/theme.css
    styles/md.css
    {{ header.styles() }}
    {{ footer.styles() }}
    _includes/pages/post.css
{% endset %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{ title }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{{ excerpt }}">
        <link rel="stylesheet"
                href="https://fonts.googleapis.com/css2?family=Lora&display=swap">
        <style>
            {{ styleLinks | aggregateStyles | safe }}
        </style>
        <script src="/scripts/post.js" type="module" async defer></script>
    </head>
    <body>
        {{ header.header() }}
        <dwac-hello name="World"></dwac-hello>
        <dwac-share target="{{ page.url | url }}" article-title="{{ title }}">
        </dwac-share>
        <main>
            <article class="md">{{ content | safe }}</article>
            <aside>{{ author.author() }}</aside>
        </main>
        {{ footer.footer() }}
    </body>
</html>
